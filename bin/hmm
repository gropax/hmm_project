#!/usr/bin/env python3

import os
import sys
from argparse import ArgumentParser, FileType
from hmm import TigerCorpus, UnivTigerCorpus, TIGER_CORPUS, TIGER_TEST, Tagger

parser = ArgumentParser(description="HMM project")
args = parser.parse_args()


# Rich tag set
#
tiger_train = TigerCorpus(TIGER_CORPUS)
tiger_test = TigerCorpus(TIGER_TEST)

tagger = Tagger(order=2)
tagger.train(tiger_train)
accur = tagger.evalTagger_2(tiger_test)

# Universal tag set
#
univ_tiger_train = UnivTigerCorpus(TIGER_CORPUS)
univ_tiger_test = UnivTigerCorpus(TIGER_TEST)

tagger = Tagger(order=2)
tagger.train(univ_tiger_train)
univ_accur = tagger.evalTagger_2(univ_tiger_test)

print("Rich tag set:  %2f\nUniv tag set:  %2f" % (accur, univ_accur))
